{
    "scripts": {
        "watch": "env MODE=development hugo server -D --watch --i18n-warnings --path-warnings --disableFastRender",
        "clean": "rm -rf ./output",
        "build:hugo": "env MODE=production NODE_ENV=production hugo -e \"production\" --minify --debug --i18n-warnings --path-warnings",
        "build": "npm run clean & npm run build:hugo"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^3.1.3",
        "autoprefixer": "^10.2.6",
        "commander": "^6.2.1",
        "postcss": "^8.3.0",
        "postcss-cli": "^8.3.1",
        "postcss-font-magician": "^3.0.0",
        "postcss-import": "^12.0.1",
        "postcss-nested": "^5.0.5",
        "postcss-simple-vars": "^6.0.3",
        "tailwindcss": "^1.9.6"
    },
    "browserslist": [
        "last 1 version",
        "> 1%",
        "maintained node versions",
        "not dead"
    ]
}
